<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/item">
        <shape>
            <stroke
                android:width="0dp"
                android:color="#708f4f06"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#d9dcd8"
                android:endColor="#d9dcd8"
                android:startColor="#d9dcd8"
                android:type="linear"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>