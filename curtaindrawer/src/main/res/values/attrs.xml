<resources>

    <declare-styleable name="CurtainMenu">
        <!-- wave count vertical-->
        <attr name="v_waveCount" format="float" />
        <!-- wave count horizontal-->
        <attr name="h_waveCount" format="float" />
        <!-- behind menu layout-->
        <attr name="behind_menu" format="reference" />
        <!-- content layout-->
        <attr name="content" format="reference" />
        <!-- curtain view max scroll distance for parent view-->
        <attr name="maxRate" format="float" />
    </declare-styleable>

</resources>